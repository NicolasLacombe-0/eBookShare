{% extends 'base.html.twig' %}

{% block title %}eBookShare - Browsing{% endblock %}

{% block body %}
<main>
    <section class="ebookDisplay">
        <div class="imageHalf">
            <img src='{{ asset('img/' ~ ebook.image) }}' alt="{{ebook.image}}">
            <a href="{{ path("ebookPerCategory",{'category':ebook.category.id})}}"><h3>{{ebook.category.name}}</h3></a>
        </div>
        <div class="contentHalf">
            <div class ="contentHead">
                <div class="contentTitle">
                    <h2>{{ebook.title}}</h2>
                    <p>By {{ebook.author}}</p>
                </div>
                <div class="btns">
                    <div class="btn">READ ONLINE</div>
                    <div class="btn">DOWNLOAD</div>
                </div>
            </div>
            <p>{{ebook.synopsis}}</p>
        </div>
    </section>


    <section class="comments">
        <div class="commentsHead">
            <h2>COMMENTS</h2>
            {% if app.user %}
            {# <a href="{{ path('comment_add',{'id':ebook.id}) }}" class="btn">Add a comment +</a> #}
            {{form_start(commentForm)}}
                {{form_row(commentForm.content,{'attr':{'placeholder':'Write your comment'}})}}
                <button type="submit" class="btn">Comment</button>
            {{form_end(commentForm)}}

            {% else %}
            <a href="{{ path("app_login") }}" class="btn">Log in to comment</a>
            {% endif %}
        </div>
        <ol class="commentsList">
            <hr>
            {% for review in comment | reverse(true)%}
            <li class="comment">
                <h3>{{review.user.username}}</h3>
                <p class="commentDate">{{review.updatedAt|date('m/d/Y')}} at {{review.updatedAt|date('h')}}h{{review.updatedAt|date('i')}}</p>
                <textarea readonly class="commentContent">{{review.content}}</textarea>
            </li>
            <hr>
            {% endfor %}
        </ol>
    </section>

</main>
{% endblock %}